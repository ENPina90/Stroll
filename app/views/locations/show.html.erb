<div class="banner" style="background-image: url(https://www.voucherwonderland.com/reisemagazin/wp-content/uploads/2017/03/Berlin-Sehensw%C3%BCrdigkeiten-1.jpeg);">
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 m-2">
      <h1 class="title" style="font-size: 35px; line-height: 40px;"><%= @location.name %></h1>
    </div>
    <div class="m-1">
      <% if @starred_locations.include?(@location.id) %>
        <i class="fas fa-star fa-lg" style="position: relative; bottom: 8px; color: gold;"></i>
      <% else %>
        <i class="far fa-star fa-lg" style="position: relative; bottom: 8px;"></i>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center w-90 pr-2 pl-2">
    <p>Category <strong><%= @location.category.capitalize %></strong> | Cost: <strong><%= @location.cost %> â‚¬</strong></p>
    <p style="margin: auto;"><%= @location.address %></p>
  </div>
  <hr>

  <div class="row w-90 pr-3 pl-3 align-items-center">
    <h1 class="subtitle">Notes:</h1>
    <button type="button" id="formButton" onclick="ShowAndHide()" class="btn btn-square btn-primary" style="position: relative; right: -52vw; width: 100px;
    height: 35px;">Add note</button>

    <div class="col-12">
    <%= simple_form_for [@location, @note], html: {id: "form1", style: "display:none;"} do |f| %>
      <%= f.input :content %>
      <%= f.button :submit, class: "btn btn-primary", style: "color: white;" %>
    <% end %>
    </div>

    <div class="mt-3">
      <% @notes.each do |note| %>
        <p><%= note.content %></p>
      <% end %>
    </div>
  </div>
</div>

<script>
  function ShowAndHide() {
    var x = document.getElementById('form1');
    var y = document.getElementById('formButton');
    if (x.style.display == 'none') {
        x.style.display = 'block';
        y.style.color = 'white';
        y.innerText = 'Close';
    } else {
        x.style.display = 'none';
        y.style.color = 'white';
        y.innerText = 'Add note';
    }
  }
</script>

