<ul class="card-list">
  <% @first_walk = @walks.first %>
  <li class="card-trip">
      <%= image_tag "https://www.visitberlin.de/system/files/styles/visitberlin_teaser_full_width_visitberlin_mobile_1x/private/image/iStock_000074120341_Double_DL_PPT_0.jpg?h=a66ba266&itok=tD4ERppn" %>
      <div class="card-trip-infos">
        <div>
          <h2><%= link_to "Your most recent Stroll", walk_path(@first_walk) %></h2>
          <p><strong>Starts at: </strong><%= @first_walk.starting_location&.address %></p>
        </div>
      </div>
  </li>

  <% @walks.first(5).each do |walk| %>
    <li class="card-product">
      <%= image_tag "https://www.visitberlin.de/system/files/styles/visitberlin_teaser_full_width_visitberlin_mobile_1x/private/image/iStock_000074120341_Double_DL_PPT_0.jpg?h=a66ba266&itok=tD4ERppn" %>
      <div class="card-product-infos">
        <h2><%= link_to "Stroll ##{walk.id}", walk_path(walk) %></h2>
        <p><strong>Starts at: </strong><%= walk.starting_location&.address %></p>
      </div>
    </li>  
  <% end %>
</ul>

